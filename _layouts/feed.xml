---
layout: none
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}{{ site.baseurl }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}</id>
  <author>
    <name>{{ site.author | default: site.title }}</name>
  </author>

  {% for post in site.posts limit:20 %}
  <entry>
    <title type="html">{{ post.title | xml_escape }}</title>

    <!-- Force external link if source_url exists -->
    <link href="{% if post.source_url %}{{ post.source_url }}{% else %}{{ post.url | absolute_url }}{% endif %}" 
          rel="alternate" type="text/html" 
          title="{{ post.title | xml_escape }}" />

    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>

    <!-- Same for ID to avoid duplicates -->
    <id>{% if post.source_url %}{{ post.source_url }}{% else %}{{ post.url | absolute_url }}{% endif %}</id>

    <content type="html" xml:base="{% if post.source_url %}{{ post.source_url }}{% else %}{{ post.url | absolute_url }}{% endif %}">
      <![CDATA[
        {{ post.content | strip }}
        {% if post.source_url %}
          <p><a href="{{ post.source_url }}">[Read full article]</a></p>
        {% endif %}
      ]]>
    </content>

    <summary type="html">
      <![CDATA[
        {{ post.excerpt | strip_html | xml_escape }}
      ]]>
    </summary>

    <author>
      <name>{{ site.author | default: site.title }}</name>
    </author>
  </entry>
  {% endfor %}
</feed>
