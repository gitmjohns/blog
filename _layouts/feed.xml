---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}</id>
  <author>
    <name>{{ site.author.name | default: site.title | xml_escape }}</name>
  </author>

  {% for post in site.posts limit:20 %}
  <entry>
    <title type="html">{{ post.title | xml_escape }}</title>

    {% if post.source_url %}
      <link href="{{ post.source_url }}" rel="alternate" type="text/html" title="{{ post.title | escape }}"/>
      <id>{{ post.source_url }}</id>
    {% else %}
      <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title | escape }}"/>
      <id>{{ post.id | absolute_url }}</id>
    {% endif %}

    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <content type="html" xml:base="{{ post.url | absolute_url }}">
      <![CDATA[ {{ post.content }} ]]>
    </content>
    <author>
      <name>{{ post.author | default: site.author.name | xml_escape }}</name>
    </author>
    {% if post.categories %}
      {% for category in post.categories %}
        <category term="{{ category }}"/>
      {% endfor %}
    {% endif %}
    <summary type="html">
      <![CDATA[ {{ post.excerpt | strip_html | xml_escape }} ]]>
    </summary>
  </entry>
  {% endfor %}
</feed>
